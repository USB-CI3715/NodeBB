{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist", 
    "rootDir": "./src",
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": [
    "public/src/**/*",
    "src/**/*", 
    "test/**/*"
  ],
  "exclude": ["node_modules"]
}
